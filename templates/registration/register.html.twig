{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <form action="{{ path('app_register') }}" method="POST">
        <div>
            <label>Username</label>
            <input type="text" name="_username" placeholder="Enter username"/>
        </div>
        <div>
            <label>Email</label>
            <input type="email" name="_email" placeholder="Email"/>
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="_password" placeholder="Enter password"/>
        </div>
        <input type="hidden" name="_target_path" value="/posts">
        <button type="submit">Register</button>

        <br>
    </form>
{% endblock %}