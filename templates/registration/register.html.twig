{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <form action="{{ path('app-register-save') }}" method="POST" style="max-width: 400px; margin: 0 auto;">
        <div style="margin-bottom: 10px;">
            <label for="_username">Username</label>
            <input type="text" id="_username" name="_username" placeholder="Enter username" style="width: 100%; padding: 5px;">
        </div>
        <div style="margin-bottom: 10px;">
            <label for="_email">Email</label>
            <input type="email" id="_email" name="_email" placeholder="Email" style="width: 100%; padding: 5px;">
        </div>
        <div style="margin-bottom: 10px;">
            <label for="_password">Password</label>
            <input type="password" id="_password" name="_password" placeholder="Enter password" style="width: 100%; padding: 5px;">
        </div>
        <input type="hidden" name="_target_path" value="/posts">
        <button type="submit" style="width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; cursor: pointer;">Register</button>

        <br>
    </form>
{% endblock %}
