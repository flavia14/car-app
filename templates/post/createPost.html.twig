{% extends 'base.html.twig' %}

{% block title %}
    Create new post
{% endblock %}

{% block body %}
    <form action="{{ path('post-add-save') }}" method="POST" style="max-width: 400px; margin: 0 auto;">
        <div style="margin-bottom: 10px;">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="Enter title" style="width: 100%; padding: 5px;">
        </div>
        <div style="margin-bottom: 10px;">
            <label for="text">Text</label>
            <input type="text" id="text" name="text" placeholder="Enter text" style="width: 100%; padding: 5px;">
        </div>
        <input type="hidden" name="_target_path" value="/posts">
        <button type="submit" style="width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; cursor: pointer;">Add Post</button>
    </form>
{% endblock %}
