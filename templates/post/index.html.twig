{% extends 'base.html.twig' %}
{% block body %}
    <center>
        {% for post in posts %}
        <hr style="border-top: 5px solid black;">
        <br>
        <div>
            POST {{ post.title }}
            <br>
            <button style="background-color: darkseagreen"><a href="{{ path('post-update', {id: post.id} ) }}"> Edit</a>
            </button>
            <br>
            <b style="color: #5eb5e0">
                TITLE:
                {{ post.title }}
            </b>
            <br>
            <b>
                TEXT:
                {{ post.text }}
            </b>
            <br>
            {% if post.likedBy.contains(app.user) %}
            <a href="{{ path('app_unlike', {id: post.id}) }}">
                unlike <span> {{ post.likedBy.count }}</span>
                {% else %}
                <a href="{{ path('app_like', {id: post.id}) }}">
                    like <span> {{ post.likedBy.count }}</span>
                    {% endif %}
                </a>
                <br>
                <button style="background-color: #AAAAAA"><a href="{{ path('add-comment', {id: post.id} ) }}"> Add
                        comment</a></button>
                <button style="background-color: bisque"><a href="{{ path('comments', {id: post.id} ) }}"> View
                        comments</a></button>
                <br>
                <br>
                {% endfor %}

                <hr style="border-top: 5px solid black;">
    </center>
    <button style="background-color: #AAAAAA"><a href="{{ path('post_add' ) }}"> Add new Post</a></button>
    <button><a href="{{ path('app_logout' ) }}"> Logout</a></button>
{% endblock %}
