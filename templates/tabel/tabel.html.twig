{% extends 'base.html.twig' %}

{% block title %}
  Front Sensors
{% endblock %}

{% block body %}
  <br>
  <h1 style="text-align: center;">Front Sensors</h1>
  <table style="border-collapse: collapse; width: 60%; background-color: #cce5ff">
    <thead>
    <tr>
      <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">Id</th>
      <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">Name</th>
      <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">Value</th>
      <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">Unit</th>

    </tr>
    </thead>
    <tbody>
    {% for sensor in sensors %}
      <tr>
        <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.id }}</td>
        <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.name }}</td>
        <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.value }}</td>
        <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.unit }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
