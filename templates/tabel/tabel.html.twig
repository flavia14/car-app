{% extends 'base.html.twig' %}

{% block title %}
  Front Sensors
{% endblock %}

{% block body %}
  <br>
  <h1 style="text-align: center;">Front Sensors</h1>

  {% if sensors is empty %}
    <p>No sensors found.</p>
  {% else %}
    <table style="border-collapse: collapse; width: 60%; background-color: #cce5ff">
      <thead>
      <tr>
        <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">
          <a href="?sort=id">Id</a>
        </th>
        <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">
          <a href="?sort=name">Name</a>
        </th>
        <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">
          <a href="?sort=value">Value</a>
        </th>
        <th style="border: 5px solid #ccc; padding: 8px; font-weight: bold; color: #5eb5e0; background-color: #dff0d8">
          <a href="?sort=unit">Unit</a>
        </th>
      </tr>
      </thead>
      <tbody>
      {% for sensor in sensors %}
        <tr>
          <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.id }}</td>
          <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.name }}</td>
          <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.value }}</td>
          <td style="border: 4px solid #ccc; padding: 8px;">{{ sensor.unit }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

    {% if numPages > 1 %}
      <div style="text-align: center;">
        {% for page in 1..numPages %}
          <a href="?page={{ page }}{% if sort %}&sort={{ sort }}{% endif %}">{{ page }}</a>
        {% endfor %}
      </div>
    {% endif %}
  {% endif %}
{% endblock %}
