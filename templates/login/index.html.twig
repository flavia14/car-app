{% extends 'base.html.twig' %}
{% block title %}Hello LoginController!{% endblock %}
{% block body %}
    <form action="{{ path('app_login') }}" method="POST">
        <div>
            <label>Username</label>
            <input type="text" name="_username" value="{{ lastUsername }}" placeholder="Enter username"/>
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="_password" placeholder="Enter password"/>
        </div>

        <input type="hidden" name="_target_path" value="/posts">
        <button type="submit">Login</button>
    </form>
{% endblock %}
